{
  "ui-id": "car_anno",
  "schema": {
    "fields": [
      { "type": "multi-choice", "label": "Image properties", "id": "image_properties", "colspan": 6 },
      { "type": "multi-choice", "label": "Main information properties", "id": "info_properties", "colspan": 6 },
      { "type": "link", "label": "Source Image Link", "id": "image.url", "target": "_blank", "style": { "color": "#337ab7" }, "colspan": 6 },
      { "type": "info", "label": "Previous annotator", "id": "username", "style": { "fontSize": 16 }, "colspan": 6 },
      { "type": "info", "label": "Group", "id": "group_id", "colspan": 6 },
      { "type": "info", "label": "Latex confidence", "id": "latexConfidence", "style": { "fontSize": 16 }, "colspan": 6 },
      { "type": "checkbox", "label": "Is done", "id": "is_good", "style": { }, "colspan": 6, "help": "The annotation is complete." },
      { "type": "text-edit", "label": "Text", "id": "text", "style": { "marginTop": "20px" }, "clear": "left", "colspan": 6 },
      { "type": "text-render", "label": "Text preview", "id": "text", "style": { "marginTop": "20px" }, "colspan": 6 },
      {
        "type": "image",
        "id": "image",
        "label": "Image",
        "fields": [
          {
            "type": "bbox",
            "geometry": "box",
            "label": "Math char box",
            "id": "chars",
            "has_text": true,
            "marker_width": "1",
            "color": "#0000FF",
            "has_char_size": false
          },
          {
            "type": "bbox",
            "geometry": "box",
            "label": "Text word box",
            "id": "text",
            "has_text": false,
            "marker_width": "2",
            "color": "#009933",
            "has_char_size": false
          },
          {
            "type": "bbox",
            "geometry": "box",
            "label": "Equation bounding box",
            "id": "equations",
            "has_text": false,
            "marker_width": "2",
            "color": "#FF0000",
            "has_char_size": false
          },
          {
            "type": "bbox",
            "geometry": "box",
            "label": "Header",
            "id": "header",
            "has_text": true,
            "marker_width": "2",
            "color": "#F4D03F",
            "has_char_size": false
          }
        ]
      }
    ]
  },

  "options": {
    "image_type": {
      "options": [
        { "value": "math", "label": "Math" },
        { "value": "text", "label": "Text" },
        { "value": "landscape", "label": "Landscape" },
        { "value": "portrait", "label": "portrait" }
      ],
      "default": "math"
    },
    "image_properties": {
      "options": [
        { "value": "is_text_only", "label": "Is text dominant.", "help": "Mostly just contains text." },
        { "value": "contains_geometry", "label": "Contains geometry problem or a graph", "disabled": true, "help": "Is automatically set to true whenever one of the following 3 options is true." },
        { "value": "contains_graph", "label": "Contains graph", "help": "2D or 3D graph." },
        { "value": "contains_chart", "label": "Contains chart", "help": "Visualization of discrete dataset." },
        { "value": "contains_diagram", "label": "Contains diagram", "help": "Contains diagram." },
        { "value": "contains_table", "label": "Contains table", "help": "Contains a gridded table - does not include matrices which are math." },
        { "value": "contains_foreign_alphabet", "label": "Contains foreign alphabet", "disabled": false, "help": "Is set to true automatically when there is Chinese / Russian / other alphabets as the main text in the image." },
        { "value": "fully_boxed", "label": "Fully boxed", "help": "Not missing any math character boxes." },
        { "value": "contains_equation", "label": "Contains equation", "disabled": true, "help": "Is set to true automatically when there is an equation box in image." }
      ],
      "default": []
    },
    "info_properties": {
      "options": [
        { "value": "is_printed", "label": "Printed", "help": "Main information is not handwritten." },
        { "value": "is_inverted", "label": "Inverted", "help": "Light ink on dark background, eg. blackboards." }
      ],
      "default": []
    }
  },

  "data": {
    "image_name": "First equation",
    "image_type": "math",
    "is_good": true,
    "image_properties": ["is_text_only", "contains_equation"],
    "info_properties": ["is_printed"],
    "image": { "url": "http://static4.businessinsider.com/image/587fbec3ee14b6c7148b892e-1495" },
    "username": "George",
    "latex": "x^{2} + x",
    "chars": [{ "x": 0.1, "y": 0.2, "w": 0.1, "h": 0.2, "text": "x" }],
    "equations": [{ "x": 0.01, "y": 0.3, "height": 0.25, "width": 0.95 }]
  }
}

